page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.add{
  position: absolute;
  right: 5px;
  top: 5px;
}

.userinfo {
    height: 300rpx;
    width: 100%;
    background: #FFF;
    border: 1px solid rgba(0, 0, 0, .1);
    border-left: none;
    border-right: none;
    display: flex;
	  flex-direction: column;
    align-items: center;
    transition: all 300ms ease;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
    display: table-cell;
    vertical-align: middle;
    text-align: center;
    border-radius: 50%;
}

.nickname {
    align-items: center;
    font-size: 32rpx;
    color: #007AFF;
}

.friends{
    display: flex;
    height: 50px;
    width: 100%;
    margin-top: 5px;
    background-color: #FFF;
  }

.friend-name{
    position: relative;
    left: 20px;
    top: 10px;
  }

.change{
  position: absolute;
  right: 25px;
  top: 10px;
}

.pick-container { 
    width: 100%; 
    height: 50px; 
    background-color: lightgoldenrodyellow; 
    position: relative; 
    z-index: 50; 
    top: 5px; 
  }

.showClass{
  display:block;
}

.hideClass{
  display:none;
}

.action{
    color: #2A53CD;
    text-align:right;
    float:right;
}

.tele{
    position: absolute;
    left: 5px;
    top: 10px;
  }

.tele-number{
    position: absolute;
    left: 90px;
    top: 10px;
  }

.action-item1{
    height: 40px;
    width: 80px;
    position: absolute;
    font-size:85%;
    right: 5px;
    top: 5px;
    background-color: #00bbff;
  }

.action-item2{
    height: 40px;
    width: 80px;
    position: absolute;
    font-size:85%;
    right: 90px;
    top: 5px;
    background-color: #ff0000;
  }



