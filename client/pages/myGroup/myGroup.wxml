<view class="user">

    <navigator url='../myFriend/myFriend' open-type='redirectTo'>
      <button class='add' size="mini">添加好友</button>
    </navigator>

    <view class="userinfo">
        <image class="avatar"
            src="{{userInfo.avatarUrl}}"
            background-size="cover"></image>
       <text class="nickname">{{userInfo.nickName}}</text>
    </view>
    
    <scroll-view scroll-y="true" style="height: 400px;" bindscrolltoupper="upper"        bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}"          scroll-top="{{scrollTop}}">

      <view wx:for="{{listShow}}" wx:for-item="item" wx:key="">

        <view class="friends" bindtap="showContent" data-index="{{index}}">         
          <text class='friend-name'>{{item.title}}</text>
        </view>

        <view  class="pick-container {{item.show ?'showClass': 'hideClass'}}">
          <view class='action'>
          <text class='tele'>联系好友：</text>
            <view class='tele-number' bindlongtap='phoneNumTap'>{{item.phone}}</view>
            <navigator url= '../editFriend/editFriend?index={{index}}'                            open-type='redirectTo'>
              <button class='change' size='mini'>编辑</button>
            </navigator>
          </view>
        </view>

      </view>

    </scroll-view>

</view>
 