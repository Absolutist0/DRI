/**index.wxss**/
page {
    background: #F6F6F6;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}

.input-phone{
  position: absolute;
  top: 200px;
  left: 100px;
  border-width:thin;
  border-bottom-style: solid;
  border-color: #ddd;
}

.input-button{
  position: absolute;
  left: 75px;
  bottom: 120px;
  width: 200px;
  font-family: #ffffff;
  background-color: #00DD00;
}

.userinfo {
    height: 300rpx;
    width: 100%;
    border-left: none;
    border-right: none;
    display: flex;
	  flex-direction: column;
    align-items: center;
    transition: all 300ms ease;
    margin-top: 50px;
}

.avatar {
    width: 200rpx;
    height: 200rpx;
    margin: 20rpx;
    display: table-cell;
    vertical-align: middle;
    text-align: center;
    border-radius: 50%;
}

.nickname {
    align-items: center;
    font-size: 32rpx;
    color: #007AFF;
}


.uploader-text{
    margin-top: 60rpx;
    color: #007AFF;
}
